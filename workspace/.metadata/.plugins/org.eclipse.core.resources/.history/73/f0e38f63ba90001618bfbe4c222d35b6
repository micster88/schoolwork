package chartBuilder;

import csci348.drawings.SimpleDrawing;

class Parallelograms extends Shape{
	int x1;
	int y1;
	int x2;
	int y2;
	int x3;
	int y3;
	Line l1;
	Line l2;
	Line l3;
	Line l4;

	protected Parallelograms(int x, int y, int width, int height, int shift, char type,  SimpleDrawing draw) {
		super(x, y, draw);
		if(type=='H'||type=='h'){
			x1=x+width;
			y1=y;
			x2=x1+shift;
			y2=y+height;
			x3=x2+width;
			y3=y2;
		}
		if(type=='V'||type=='v'){
			y1=y+height;
			x1=x;
			y2=y1+shift;
			x2=x+width;
			y3=y2+height;
			x3=x2;
		}
		draw();
	}
	
	@Override
	protected void draw(){
		l1=new Line(x,y,x1,y1,draw);
		l2=new Line(x1,y1,x2,y2,draw);
		l3=new Line(x2,y2,x3,y3,draw);
		l4=new Line(x3,y3,x,y,draw);
	}
	
	@Override
	protected void erase(){
		l1.erase();
		l2.erase();
		l3.erase();
		l4.erase();
	}
	
}
