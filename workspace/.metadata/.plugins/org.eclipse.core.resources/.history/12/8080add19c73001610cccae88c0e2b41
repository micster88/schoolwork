package chartBuilder;

import csci348.drawings.Drawing;

public class ChartBuilder {
	private Drawing draw=new Drawing();
	
	private class Square {
		private int x1;
		private int y1;
		private int x2;
		private int y2;
		private Square(int x, int y, int width, int height){
			this.x1=x-(width/2);
			this.y1=y-(height/2);
			this.x2=x+(width/2);
			this.y2=y+(height/2);
			if(x1>=0 || x2<=600 || y1>=0 || y2<=600){
				drawSquare();
			}
		}
		private void drawSquare(){
			for(int i=x1; i<x2; i++){
				for(int j=y1; j<y2; j++){
					draw.showPoint(i, j);
				}
			}
		}
		private void eraseSquare(){
			for(int i=x1; i<x2; i++){
				for(int j=y1; j<y2; j++){
					draw.hidePoint(i, j);
				}
			}
		}
	}
	
	private class Line {
		private int x1;
		private int y1;
		private int x2;
		private int y2;
		private Line(int x1, int y1, int x2, int y2){
			this.x1=x1;
			this.y1=y1;
			this.x2=x2;
			this.y2=y2;
			drawLine();
		}
		private void drawLine(){
			int ytemp=y1;
			int xtemp=x1;
			while(xtemp!=x2 && ytemp!=y2){
				draw.showPoint(xtemp, ytemp);
				if(xtemp!=x2){
					if(x2<x1){
						xtemp--;
					}
					else{
						xtemp++;
					}
				}
				if(ytemp!=y2){
					if(x2<x1){
						ytemp--;
					}
					else{
						ytemp++;
					}
				}
			}
		}
		private void eraseLine(){
			int ytemp=y1;
			int xtemp=x1;
			while(xtemp!=x2 && ytemp!=y2){
				draw.hidePoint(xtemp, ytemp);
				if(xtemp!=x2){
					xtemp++;
				}
				if(ytemp!=y2){
					ytemp++;
				}
			}
		}
	}
	
	public void drawLine(int x1, int y1, int x2, int y2){
		Line l=new Line(x1,y1,x2,y2);
	}
	
	public static void main(String[] args) {
		
	}

}
