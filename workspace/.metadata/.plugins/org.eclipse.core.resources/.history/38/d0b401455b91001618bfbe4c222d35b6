package chartBuilder;

import csci348.drawings.SimpleDrawing;

class Arrow extends Shape {
	private Line l1;
	private Line l2;
	private Line l3;
	private int x1;
	private int y1;
	
	protected Arrow(int x, int y, int x1, int y1, SimpleDrawing draw) {
		super(x, y, draw);
		this.x1=x1;
		this.y1=y1;
		draw();
	}
	
	@Override
	protected void draw(){
		int width=x1-x;
		int height=y1=y;
		int xDist=width/10;
		int yDist=height/10;
		int nX=x1-xDist;
		int nY=y1-yDist;
		int x2=nX+yDist;
		int y2=nY-xDist;
		int x3=nX-yDist;
		int y3=nY+xDist;
		l1=new Line(x,y,x1,y1,draw);
		l2=new Line(x1,y1,x2,y2,draw);
		l3=new Line(x1,y1,x3,y3,draw);
	}
	
	@Override
	protected void erase(){
		
	}

}
